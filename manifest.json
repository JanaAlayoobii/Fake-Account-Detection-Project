{
  "manifest_version": 3,
  "name": "Fake Account Detector (Local Model)",
  "version": "1.0",
  "description": "Detects likely fake Instagram accounts using a local ML model.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
